{
  "$schema": "https://cerise.dev/schemas/plugin-manifest-v2.json",
  "name": "pixiv-search",
  "version": "1.0.0",
  "display_name": "Pixiv 搜索",
  "description": "搜索 Pixiv 上的插画作品并展示",
  "author": "Cerise Team",

  "runtime": {
    "language": "python",
    "entry": "main.py",
    "command": "python main.py",
    "transport": "stdio"
  },

  "abilities": [
    {
      "name": "pixiv_search",
      "description": "搜索 Pixiv 上的插画作品",
      "parameters": {
        "type": "object",
        "properties": {
          "keyword": {
            "type": "string",
            "description": "搜索关键词"
          },
          "count": {
            "type": "integer",
            "default": 5,
            "minimum": 1,
            "maximum": 20,
            "description": "返回结果数量"
          }
        },
        "required": ["keyword"]
      }
    }
  ],

  "permissions": ["network.http"],

  "config_schema": {
    "type": "object",
    "properties": {
      "refresh_token": {
        "type": "string",
        "description": "Pixiv Refresh Token",
        "secret": true
      }
    },
    "required": ["refresh_token"]
  }
}
