{
  "$schema": "https://cerise.dev/schemas/plugin-manifest-v2.json",
  "name": "echo-node",
  "version": "0.1.0",
  "display_name": "Echo (Node)",
  "description": "Minimal stdio JSON-RPC plugin implemented in Node.js.",
  "author": "Cerise",

  "runtime": {
    "language": "nodejs",
    "entry": "index.js",
    "command": "node index.js",
    "transport": "stdio"
  },

  "abilities": [
    {
      "name": "echo_node",
      "description": "Echo text back (optionally with a prefix from config).",
      "parameters": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Text to echo"
          }
        },
        "required": ["text"]
      }
    }
  ],

  "permissions": [],

  "config_schema": {
    "type": "object",
    "properties": {
      "prefix": {
        "type": "string",
        "default": "",
        "description": "Optional prefix added to echoed text"
      }
    }
  }
}
